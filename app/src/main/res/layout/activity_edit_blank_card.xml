<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/theme_bg_color">

        <TextView
            android:id="@+id/tv_title"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="温馨提示：为了您的账户资金安全，银行卡绑定仅限实名认证本人的银行账号。"/>

        <RelativeLayout
            android:layout_marginTop="16dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="56dp">
            <TextView
                android:id="@+id/tv1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="银行卡号"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:textColor="#FF333333"
                android:textSize="@dimen/text_15sp"/>

            <com.messoft.gaoqin.wanyiyuan.view.edittext.XEditText
                android:id="@+id/et_code"
                android:background="@null"
                android:hint="输入银行卡号"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/text_14sp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/tv1"/>
            <View
                style="@style/default_under_line"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:visibility="gone"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="56dp">
            <TextView
                android:id="@+id/tv2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="开户所在地"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:textColor="#FF333333"
                android:textSize="@dimen/text_15sp"/>

            <com.messoft.gaoqin.wanyiyuan.view.edittext.XEditText
                android:id="@+id/et_city"
                android:background="@null"
                android:textSize="@dimen/text_14sp"
                android:hint="请填写开户所在地址"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/tv2"/>
            <View
                style="@style/default_under_line"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_type"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="56dp">
            <TextView
                android:id="@+id/tv3"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="开户银行"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:textColor="#FF333333"
                android:textSize="@dimen/text_15sp"/>

            <TextView
                android:gravity="center_vertical"
                android:id="@+id/et_type"
                android:textSize="@dimen/text_14sp"
                android:hint="请选择所属银行"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/tv3"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
            <View
                style="@style/default_under_line"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="56dp">
            <TextView
                android:id="@+id/tv5"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="开户银行支行"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:textColor="#FF333333"
                android:textSize="@dimen/text_15sp"/>

            <com.messoft.gaoqin.wanyiyuan.view.edittext.XEditText
                android:id="@+id/et_type1"
                android:textSize="@dimen/text_14sp"
                android:hint="请输入支行名称"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/tv5"/>
            <View
                style="@style/default_under_line"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="56dp">
            <TextView
                android:id="@+id/tv4"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="持卡人姓名"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:textColor="#FF333333"
                android:textSize="@dimen/text_15sp"/>

            <com.messoft.gaoqin.wanyiyuan.view.edittext.XEditText
                android:id="@+id/et_name"
                android:textSize="@dimen/text_14sp"
                android:hint="输入持卡人姓名"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/tv4"/>
        </RelativeLayout>

        <com.flyco.roundview.RoundTextView
            android:layout_gravity="center_horizontal"
            android:id="@+id/tv_sure"
            android:layout_marginTop="30dp"
            android:layout_width="200dp"
            android:layout_height="42dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="保存"
            android:textColor="@color/white"
            android:textSize="@dimen/text_14sp"
            app:rv_backgroundColor="#FF9800"
            app:rv_cornerRadius="20dp" />
    </LinearLayout>
</layout>