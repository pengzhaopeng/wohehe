<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <RelativeLayout
            android:background="@color/theme_color"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_toolbar_height">

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:scaleType="centerInside"
                    android:src="@drawable/back_white_60" />
            </RelativeLayout>

            <com.flyco.roundview.RoundLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="90dp"
                android:layout_marginRight="10dp"
                app:rv_backgroundColor="@color/white"
                app:rv_cornerRadius="8dp">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="王大力王"
                    android:textColor="#FF333333"
                    android:textSize="18sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="46dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="电话"
                        android:layout_centerVertical="true"
                        android:textColor="#FF333333"
                        android:textSize="14sp"/>
                    <TextView
                        android:id="@+id/tv_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        tools:text="905485934"
                        android:textColor="#FF333333"/>
                    <View
                        android:layout_alignParentBottom="true"
                        style="@style/default_under_line"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="级别"
                        android:layout_centerVertical="true"
                        android:textColor="#FF333333"
                        android:textSize="14sp"/>
                    <TextView
                        android:id="@+id/tv_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        tools:text="905485934"
                        android:textColor="#FF333333"/>
                    <View
                        android:layout_alignParentBottom="true"
                        style="@style/default_under_line"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="加入时间"
                        android:layout_centerVertical="true"
                        android:textColor="#FF333333"
                        android:textSize="14sp"/>
                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        tools:text="905485934"
                        android:textColor="#FF333333"/>
                    <View
                        android:layout_alignParentBottom="true"
                        style="@style/default_under_line"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="购买总额"
                        android:layout_centerVertical="true"
                        android:textColor="#FF333333"
                        android:textSize="14sp"/>
                    <TextView
                        android:id="@+id/tv_buy_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        tools:text="905485934"
                        android:textColor="#FF333333"/>
                    <View
                        android:layout_alignParentBottom="true"
                        style="@style/default_under_line"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="投资总额"
                        android:layout_centerVertical="true"
                        android:textColor="#FF333333"
                        android:textSize="14sp"/>
                    <TextView
                        android:id="@+id/tv_tz_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        tools:text="905485934"
                        android:textColor="#FF333333"/>
                    <View
                        android:layout_alignParentBottom="true"
                        style="@style/default_under_line"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_lsq"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="零售区消费"
                        android:layout_centerVertical="true"
                        android:textColor="#FF333333"
                        android:textSize="14sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:text="查看详情 >>"
                        android:textColor="#3C9DF3"
                        android:textSize="14sp"/>
                    <View
                        android:layout_alignParentBottom="true"
                        style="@style/default_under_line"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_pfq"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="批发区消费"
                        android:layout_centerVertical="true"
                        android:textColor="#FF333333"
                        android:textSize="14sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:text="查看详情 >>"
                        android:textColor="#3C9DF3"
                        android:textSize="14sp"/>
                    <View
                        android:layout_alignParentBottom="true"
                        style="@style/default_under_line"/>
                </RelativeLayout>

                <RelativeLayout
                    android:visibility="gone"
                    android:id="@+id/rl_glq"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="管理服务费"
                        android:layout_centerVertical="true"
                        android:textColor="#FF333333"
                        android:textSize="14sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:text="查看详情 >>"
                        android:textColor="#3C9DF3"
                        android:textSize="14sp"/>
                    <View
                        android:layout_alignParentBottom="true"
                        style="@style/default_under_line"/>
                </RelativeLayout>

                <com.flyco.roundview.RoundTextView
                    android:id="@+id/tv_next"
                    style="@style/common_btn_login_sure"
                    android:layout_marginLeft="34dp"
                    android:layout_marginRight="34dp"
                    android:layout_marginTop="20dp"
                    android:text="查看团队成员"
                    android:layout_marginBottom="16dp"
                    app:rv_backgroundColor="@color/theme_color"
                    app:rv_cornerRadius="20dp" />
            </com.flyco.roundview.RoundLinearLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/default_header"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"/>
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
</layout>
