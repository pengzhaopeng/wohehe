<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录"
            android:textSize="34sp"
            android:textColor="#FF333333"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="欢迎来到万益源"
            android:textColor="#FF3F3F3F"
            android:textSize="16sp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"/>

        <RelativeLayout
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <ImageView
                android:id="@+id/iv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"/>

            <com.messoft.gaoqin.wanyiyuan.view.edittext.XEditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/iv1"
                android:hint="请输入手机号"
                android:inputType="number"
                android:maxLength="11"
                android:layout_marginLeft="6dp"
                android:textColor="#FF333333"
                app:x_clearDrawable="@drawable/x_et_svg_ic_clear_24dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <ImageView
                android:id="@+id/iv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"/>

            <com.messoft.gaoqin.wanyiyuan.view.edittext.XEditText
                android:id="@+id/et_pwd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/iv2"
                android:layout_marginLeft="6dp"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:maxLength="11"
                android:textColor="#FF333333"
                app:x_clearDrawable="@drawable/x_et_svg_ic_clear_24dp"/>

        </RelativeLayout>

        <com.flyco.roundview.RoundTextView
            android:id="@+id/tv_next"
            android:text="登录"
            android:layout_marginTop="30dp"
            style="@style/common_btn_login_sure"
            android:layout_marginLeft="34dp"
            android:layout_marginRight="34dp"
            app:rv_backgroundColor="@color/theme_color"
            app:rv_cornerRadius="20dp"/>

        <RelativeLayout
            android:layout_marginTop="16dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:background="@drawable/ripple_one_item_bg"
                android:id="@+id/tv_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="立即注册 "
                android:padding="10dp"
                android:textColor="#FF999999"
                android:layout_marginLeft="40dp"/>
            <TextView
                android:background="@drawable/ripple_one_item_bg"
                android:id="@+id/tv_forget_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="忘记密码"
                android:padding="10dp"
                android:textColor="#FF999999"
                android:layout_alignParentRight="true"
                android:layout_marginRight="40dp"
                android:layout_toRightOf="@+id/view"/>
        </RelativeLayout>
    </LinearLayout>
</layout>