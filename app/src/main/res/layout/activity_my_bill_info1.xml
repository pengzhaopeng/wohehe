<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/theme_bg_color">

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rl_pfed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/iv_pfed"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop"
                app:riv_corner_radius="8dp"
                android:src="@drawable/zhaoshang_bg"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总额度"
                android:textColor="#FFFFFFFF"
                android:textSize="14sp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"/>
            <TextView
                android:id="@+id/tv_pfed_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1500000"
                android:textColor="#FFFFFFFF"
                android:textSize="40sp"
                android:layout_marginTop="44dp"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/tv_pfed_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1500000"
                android:textColor="#FFFFFFFF"
                android:layout_below="@+id/tv_pfed_money"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/pfed_edmx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="额度明细"
                android:textColor="#FF333333"
                android:textSize="14sp"
                android:visibility="gone"
                android:layout_below="@+id/iv_pfed"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="16dp" />
        </RelativeLayout>

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rl_drz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/iv_drz"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop"
                app:riv_corner_radius="8dp"
                android:src="@drawable/jianshe_bg"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待入账额度"
                android:textColor="#FFFFFFFF"
                android:textSize="14sp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="26dp"/>
            <TextView
                android:id="@+id/tv_drz_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1500000"
                android:textColor="#FFFFFFFF"
                android:textSize="40sp"
                android:layout_marginTop="50dp"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/drz_edmx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="额度明细"
                android:textColor="#FF333333"
                android:textSize="14sp"
                android:layout_below="@+id/iv_drz"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="10dp"/>
        </RelativeLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_my_bill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="2019-10-10  —  2019-12-12"
                android:textColor="#FF666666"
                android:textSize="14sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/tv_total_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="总计：0"
                android:textColor="#FFFD352E"
                android:textSize="30sp"
                android:layout_marginTop="20dp"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_dsq"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <ImageView
                android:id="@+id/iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pfed_log"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"/>
            <ImageView
                android:id="@+id/iv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dsq"
                android:layout_toRightOf="@+id/iv"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="12dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="每天定时抢额度  财富积累每一天"
                android:textColor="#FF666666"
                android:textSize="12sp"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/iv1"
                android:layout_toRightOf="@+id/iv"
                android:layout_marginTop="6dp"/>

            <com.flyco.roundview.RoundTextView
                android:id="@+id/btn"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                app:rv_backgroundColor="#FF8F06"
                app:rv_cornerRadius="20dp"
                android:text="立即进入"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:gravity="center"
                android:textSize="13sp"
                android:layout_marginTop="6dp"
                android:layout_alignLeft="@+id/ll_money"
                android:layout_below="@+id/ll_money"
                android:textColor="@color/white"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.design.widget.TabLayout
                android:id="@+id/tab_linli"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:tabBackground="@drawable/ripple_one_item_bg"
                app:tabIndicatorColor="@color/theme_color"
                app:tabSelectedTextColor="@color/theme_color"
                app:tabTextColor="@color/colorTabText"/>

            <View
                android:id="@+id/view"
                android:layout_below="@+id/tab_linli"
                style="@style/default_under_line"/>

            <android.support.v4.view.ViewPager
                android:layout_below="@+id/view"
                android:id="@+id/vp_linli"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </RelativeLayout>
    </LinearLayout>
</layout>
