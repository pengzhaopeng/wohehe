                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    app:rv_backgroundColor="@color/white"
                    app:rv_cornerRadius="@dimen/common_radius">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="46dp">

                        <TextView
                            android:id="@+id/tv24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:text="快递公司"
                            android:textColor="#FF666666"
                            android:textSize="13sp" />

                        <com.messoft.gaoqin.wanyiyuan.view.edittext.XEditText
                            android:id="@+id/et_wuliu_company"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="10dp"
                            android:layout_toRightOf="@+id/tv24"
                            android:hint="无"
                            android:text="无"
                            android:background="@null"
                            android:enabled="false"
                            android:textColor="#FF333333"
                            android:textSize="@dimen/text_13sp" />
                    </RelativeLayout>
                    <View
                        style="@style/default_under_line"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="4dp" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp">

                        <TextView
                            android:id="@+id/tv25"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:text="快递单号"
                            android:textColor="#FF666666"
                            android:textSize="13sp" />

                        <com.messoft.gaoqin.wanyiyuan.view.edittext.XEditText
                            android:id="@+id/et_wuliu_code"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="10dp"
                            android:layout_toRightOf="@+id/tv25"
                            android:hint="无"
                            android:text="无"
                            android:background="@null"
                            android:enabled="false"
                            android:textColor="#FF333333"
                            android:textSize="@dimen/text_13sp" />
                    </RelativeLayout>

                </com.flyco.roundview.RoundLinearLayout>

                <!--评价-->
                <com.flyco.roundview.RoundLinearLayout
                    android:visibility="gone"
                    android:id="@+id/rl_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    app:rv_backgroundColor="@color/white"
                    app:rv_cornerRadius="@dimen/common_radius">
                    <RelativeLayout
                        android:id="@+id/rl_more_comment"
                        android:layout_width="match_parent"
                        android:layout_height="46dp">

                        <TextView
                            android:id="@+id/tv_comment_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:text="买家评价"
                            android:textColor="#FF333333" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/arrow" />
                        <View style="@style/default_under_line"
                            android:layout_alignParentBottom="true"/>
                    </RelativeLayout>
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rc_comment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </com.flyco.roundview.RoundLinearLayout>

            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

        <!--头-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_toolbar_height">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@drawable/back_white_60" />
        </RelativeLayout>
    </RelativeLayout>
</layout>