<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:background="@color/theme_bg_color"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.flyco.roundview.RoundLinearLayout
                app:rv_backgroundColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:rv_cornerRadius="4dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp">

                    <com.messoft.gaoqin.wanyiyuan.view.edittext.XEditText
                        android:id="@+id/et_title"
                        android:hint="商品名称"
                        android:textSize="@dimen/text_14sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:textColor="@color/title1"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"/>
                </RelativeLayout>

            </com.flyco.roundview.RoundLinearLayout>

            <com.flyco.roundview.RoundLinearLayout
                app:rv_backgroundColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:rv_cornerRadius="4dp"
                android:layout_margin="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp">
                    <TextView
                        android:id="@+id/name"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textColor="#FF333333"
                        android:text="姓名"
                        android:layout_marginLeft="10dp"
                        android:textSize="@dimen/text_14sp"/>

                    <com.messoft.gaoqin.wanyiyuan.view.edittext.XEditText
                        android:id="@+id/et_name"
                        android:hint="输入姓名"
                        android:textSize="@dimen/text_14sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:layout_marginRight="10dp"
                        android:layout_toRightOf="@+id/name"/>
                    <View
                        android:layout_alignParentBottom="true"
                        android:layout_toRightOf="@+id/name"
                        style="@style/default_under_line"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp">
                    <TextView
                        android:id="@+id/phone"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textColor="#FF333333"
                        android:text="联系方式"
                        android:layout_marginLeft="10dp"
                        android:textSize="@dimen/text_14sp"/>

                    <com.messoft.gaoqin.wanyiyuan.view.edittext.XEditText
                        android:id="@+id/et_phone"
                        android:hint="输入电话号码"
                        android:textSize="@dimen/text_14sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:inputType="phone"
                        android:layout_marginRight="10dp"
                        android:layout_toRightOf="@+id/phone"/>
                    <View
                        android:layout_alignParentBottom="true"
                        android:layout_toRightOf="@+id/phone"
                        style="@style/default_under_line"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp">
                    <TextView
                        android:id="@+id/wx"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textColor="#FF333333"
                        android:text="微信"
                        android:layout_marginLeft="10dp"
                        android:textSize="@dimen/text_14sp"/>

                    <com.messoft.gaoqin.wanyiyuan.view.edittext.XEditText
                        android:id="@+id/et_wx"
                        android:hint="输入微信号"
                        android:textSize="@dimen/text_14sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:layout_marginRight="10dp"
                        android:layout_toRightOf="@+id/wx"/>
                    <View
                        android:layout_alignParentBottom="true"
                        style="@style/default_under_line"/>
                </RelativeLayout>


            </com.flyco.roundview.RoundLinearLayout>

            <com.flyco.roundview.RoundLinearLayout
                android:id="@+id/rl_pay_way"
                app:rv_backgroundColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:rv_cornerRadius="4dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp">
                    <TextView
                        android:id="@+id/way"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textColor="#FF333333"
                        android:text="收款方式"
                        android:layout_marginLeft="10dp"
                        android:textSize="@dimen/text_14sp"/>

                    <TextView
                        android:id="@+id/et_way"
                        tools:text="微信"
                        android:textColor="#FF333333"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/text_14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:layout_marginRight="10dp"
                        android:layout_toRightOf="@+id/way"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/arrow"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>

                    <View
                        android:layout_alignParentBottom="true"
                        style="@style/default_under_line"/>
                </RelativeLayout>

                <!--银行卡 微信 支付宝-->
                <!--二维码不存在-->
                <RelativeLayout
                    android:visibility="gone"
                    android:id="@+id/rL_ma_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/ma_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/erweima"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"/>
                    <TextView
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/ma_1"
                        android:layout_marginTop="10dp"
                        android:text="您还没有上传收款二维码，请点击添加"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FF999999"
                        android:layout_marginBottom="20dp"/>

                </RelativeLayout>
                <!--二维码存在-->
                <RelativeLayout
                    android:visibility="gone"
                    android:id="@+id/rL_ma_has"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/code_ma"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/erweima"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"/>
                    <TextView
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/code_ma"
                        android:layout_marginTop="10dp"
                        android:text="点击更换收款码"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FF5591DF"
                        android:layout_marginBottom="20dp"/>

                </RelativeLayout>
                <!--银行卡不存在-->
                <RelativeLayout
                    android:visibility="gone"
                    android:id="@+id/rL_card_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/ma_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/yhk_128"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"/>
                    <TextView
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/ma_2"
                        android:layout_marginTop="10dp"
                        android:text="您还没有添加银行卡信息，请点击添加"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FF999999"
                        android:layout_marginBottom="20dp"/>

                </RelativeLayout>
                <!--银行卡存在-->
                <RelativeLayout
                    android:visibility="gone"
                    android:id="@+id/rL_card_has"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/ma_111"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="10dp">

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:id="@+id/iv_yhk_bg"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            tools:src="@drawable/zhaoshang_bg"
                            app:riv_border_color="#333333"
                            app:riv_corner_radius="10dp"
                            app:riv_mutate_background="true" />

                        <ImageView
                            android:id="@+id/iv_yhk_logo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/zhaoshang_logo"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="20dp"/>

                        <TextView
                            android:id="@+id/card_name1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="70dp"
                            android:layout_marginTop="14dp"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_18sp"
                            tools:text="狗子" />

                        <TextView
                            android:id="@+id/card_type1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/card_name1"
                            android:layout_below="@+id/card_name1"
                            android:layout_marginTop="18dp"
                            android:text="中国招商银行 (深圳龙华支行)"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/card_code1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/card_name1"
                            android:layout_below="@+id/card_type1"
                            android:layout_marginTop="6dp"
                            android:text="6256698666666662222333"
                            android:textColor="@color/white" />

                    </RelativeLayout>

                    <TextView
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/ma_111"
                        android:layout_marginTop="10dp"
                        android:text="点击更换银行卡"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FF5591DF"
                        android:layout_marginBottom="20dp"/>
                </RelativeLayout>


            </com.flyco.roundview.RoundLinearLayout>

            <com.flyco.roundview.RoundTextView
                android:id="@+id/btn_pay"
                android:layout_width="180dp"
                android:layout_height="42dp"
                app:rv_backgroundColor="#FF9800"
                app:rv_cornerRadius="20dp"
                android:text="确认寄售"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="@dimen/text_14sp"
                android:layout_gravity="center_horizontal"
                android:layout_centerVertical="true"
                android:layout_marginTop="20dp" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</layout>