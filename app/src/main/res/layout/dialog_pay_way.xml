<?xml version="1.0" encoding="utf-8"?>
<com.flyco.roundview.RoundLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:rv_backgroundColor="@color/white"
    app:rv_cornerRadius_TR="10dp"
    android:orientation="vertical"
    app:rv_cornerRadius_TL="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="50dp"
            android:scaleType="centerInside"
            android:layout_height="match_parent"
            android:src="@drawable/icon_back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择收款方式"
            android:textColor="#FF333333"
            android:layout_centerInParent="true"/>
        <View
            style="@style/default_under_line"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_zfb"
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/zfb_60"/>

        <TextView
            android:layout_width="wrap_content"
            android:textColor="#FF333333"
            android:textSize="@dimen/text_15sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
            android:layout_height="wrap_content"
            android:text="支付宝"/>
        <View
            style="@style/default_under_line"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_wx"
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/wx_60"/>

        <TextView
            android:layout_width="wrap_content"
            android:textColor="#FF333333"
            android:textSize="@dimen/text_15sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
            android:layout_height="wrap_content"
            android:text="微信"/>
        <View
            style="@style/default_under_line"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_yhk"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="50dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ykf_60"/>

        <TextView
            android:layout_width="wrap_content"
            android:textColor="#FF333333"
            android:textSize="@dimen/text_15sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
            android:layout_height="wrap_content"
            android:text="银行卡"/>
        <View
            style="@style/default_under_line"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>


</com.flyco.roundview.RoundLinearLayout>