<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F4F5FA">

        <com.flyco.roundview.RoundLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:rv_cornerRadius="4dp"
            app:rv_backgroundColor="@color/white">

            <RelativeLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="44dp">

                <TextView
                    android:id="@+id/tv_order_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    tools:text="订单号：45454454545"
                    android:textSize="@dimen/text_14sp"
                    android:textColor="#FF333333"
                    android:layout_marginLeft="10dp"/>
            </RelativeLayout>

            <View
                style="@style/default_under_line"/>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="商品名称商品名称商品名称商品名称"
                android:layout_marginRight="10dp"
                android:textColor="#FF333333"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textSize="14sp"/>
            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_centerVertical="true"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    tools:text="出售金豆"
                    android:layout_marginLeft="10dp"
                    android:textColor="#FF666666"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:layout_marginTop="10dp"
                    android:id="@+id/tv_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="支付宝"
                    android:layout_toRightOf="@+id/tv_name"
                    android:textColor="#FF666666"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_pay_way"
                    android:layout_centerVertical="true"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    tools:text="出售金豆"
                    android:layout_marginLeft="10dp"
                    android:textColor="#FF666666"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:layout_marginTop="10dp"
                    android:id="@+id/tv_pay_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="支付宝"
                    android:layout_toRightOf="@+id/tv_pay_way"
                    android:textColor="#FF666666"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />

            </RelativeLayout>

            <View
                android:layout_marginTop="12dp"
                style="@style/default_under_line"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="2019-10-10  12：20"
                    android:textSize="@dimen/text_12sp"
                    android:textColor="#FF333333"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp" />

                <com.flyco.roundview.RoundTextView
                    android:visibility="gone"
                    android:id="@+id/btn_yfk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我已付款"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    app:rv_cornerRadius="20dp"
                    android:paddingTop="5dp"
                    android:textSize="@dimen/text_13sp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="11dp"
                    android:paddingRight="11dp"
                    android:layout_marginRight="10dp"
                    app:rv_strokeWidth="0.8dp"
                    app:rv_strokeColor="@color/theme_txt_color"
                    android:textColor="@color/theme_txt_color"/>

                <com.flyco.roundview.RoundTextView
                    android:visibility="gone"
                    android:id="@+id/btn_qxdd"
                    android:layout_toLeftOf="@+id/btn_yfk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="取消订单"
                    android:layout_centerVertical="true"
                    app:rv_cornerRadius="20dp"
                    android:paddingTop="5dp"
                    android:textSize="@dimen/text_13sp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="11dp"
                    android:paddingRight="11dp"
                    app:rv_strokeWidth="0.8dp"
                    android:layout_marginRight="10dp"
                    app:rv_strokeColor="#FF666666"
                    android:textColor="#FF666666"/>

                <com.flyco.roundview.RoundTextView
                    android:visibility="gone"
                    android:id="@+id/btn_wyss"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我要申诉"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    app:rv_cornerRadius="20dp"
                    android:paddingTop="5dp"
                    android:textSize="@dimen/text_13sp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="11dp"
                    android:paddingRight="11dp"
                    android:layout_marginRight="10dp"
                    app:rv_strokeWidth="0.8dp"
                    app:rv_strokeColor="@color/theme_txt_color"
                    android:textColor="@color/theme_txt_color"/>
            </RelativeLayout>


        </com.flyco.roundview.RoundLinearLayout>
    </LinearLayout>

</layout>