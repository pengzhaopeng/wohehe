<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F4F5FA">

        <com.flyco.roundview.RoundLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:rv_cornerRadius="4dp"
            app:rv_backgroundColor="@color/white"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp">

            <RelativeLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="46dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_header"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    tools:src="@drawable/default_header"/>

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/iv_header"
                    tools:text="17688700269"
                    android:textSize="@dimen/text_13sp"
                    android:textColor="#999999"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:id="@+id/tv_credit_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="信用评分：95"
                    android:gravity="center_horizontal"
                    android:textSize="@dimen/text_13sp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="#FFF4F4F4"
                    android:paddingTop="2dp"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:textColor="#FF999999"
                    android:paddingBottom="2dp"/>
            </RelativeLayout>

            <View
                style="@style/default_under_line"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="出售金豆"
                    android:layout_marginRight="4dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_toLeftOf="@+id/tv1"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:textColor="#FF333333"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:visibility="gone"
                    android:id="@+id/pay_way"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="支付宝"
                    android:textColor="#FF666666"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />

                <ImageView
                    android:id="@+id/iv_zfb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:src="@drawable/zfb_36"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"/>
                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收款方式："
                    android:layout_centerVertical="true"
                    android:layout_marginRight="0dp"
                    android:textSize="@dimen/text_12sp"
                    android:textColor="#FF666666"
                    android:layout_toLeftOf="@+id/iv_zfb"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="10000"
                    android:textColor="#FFFF3B30"
                    android:textSize="@dimen/text_24sp"
                    android:layout_centerVertical="true"
                   />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="挂售时间：2019-10-10  12：20"
                    android:textSize="@dimen/text_12sp"
                    android:textColor="#FF999999"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="12dp"/>

                <com.flyco.roundview.RoundTextView
                    android:id="@+id/btn_pay"
                    android:layout_width="76dp"
                    android:layout_height="30dp"
                    app:rv_backgroundColor="#FF9800"
                    android:text="我想要"
                    android:textColor="@color/white"
                    android:gravity="center"
                    app:rv_cornerRadius="4dp"
                    android:layout_marginRight="10dp"
                    android:textSize="@dimen/text_14sp"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>

        </com.flyco.roundview.RoundLinearLayout>
    </LinearLayout>

</layout>