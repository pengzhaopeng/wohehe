<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <ImageView
                android:id="@+id/iv"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img_load_error_0"/>
            <TextView
                android:layout_toRightOf="@+id/iv"
                android:layout_marginLeft="8dp"
                android:id="@+id/tv_name"
                android:textColor="#FF333333"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginTop="10dp"
                tools:text="智慧车(ZHC)OBD车载智能精品小冰箱cx-144型号···"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"/>

            <LinearLayout
                android:layout_below="@+id/tv_name"
                android:layout_alignLeft="@+id/tv_name"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥"
                    android:textSize="@dimen/text_14sp"
                    android:textColor="#FFFF3B30"/>
                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="356.00"
                    android:layout_marginLeft="2dp"
                    android:textSize="@dimen/text_15sp"
                    android:textColor="#FFFF3B30"/>

                <com.flyco.roundview.RoundTextView
                    android:id="@+id/tv_price_market"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="商城价：¥699"
                    android:textColor="#FF999999"
                    android:textSize="11sp"
                    android:layout_marginLeft="20dp"
                    app:rv_backgroundColor="#FFF4F5FA"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"/>
            </LinearLayout>
        </RelativeLayout>
        <View
            android:layout_marginTop="6dp"
            style="@style/default_under_line"/>
        <RelativeLayout
            android:id="@+id/rl_bottom"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <com.flyco.roundview.RoundTextView
                android:visibility="gone"
                android:id="@+id/btn_delete"
                android:layout_width="80dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="删除"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                app:rv_cornerRadius="20dp"
                android:paddingTop="5dp"
                android:textSize="@dimen/text_13sp"
                android:paddingBottom="5dp"
                android:layout_marginRight="10dp"
                app:rv_strokeWidth="0.8dp"
                app:rv_strokeColor="#FF666666"
                android:textColor="#FF666666"/>
            <com.flyco.roundview.RoundTextView
                android:visibility="gone"
                android:id="@+id/btn_edit"
                android:layout_toLeftOf="@+id/btn_delete"
                android:layout_width="80dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="编辑"
                android:layout_centerVertical="true"
                app:rv_cornerRadius="20dp"
                android:paddingTop="5dp"
                android:textSize="@dimen/text_13sp"
                android:paddingBottom="5dp"
                app:rv_strokeWidth="0.8dp"
                android:layout_marginRight="10dp"
                app:rv_strokeColor="#FF666666"
                android:textColor="#FF666666"/>

            <com.flyco.roundview.RoundTextView
                android:visibility="gone"
                android:id="@+id/btn_sqsj"
                android:layout_toLeftOf="@+id/btn_delete"
                android:layout_width="80dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="申请上架"
                android:layout_centerVertical="true"
                app:rv_cornerRadius="20dp"
                android:paddingTop="5dp"
                android:textSize="@dimen/text_13sp"
                android:paddingBottom="5dp"
                app:rv_strokeWidth="0.8dp"
                android:layout_marginRight="10dp"
                app:rv_strokeColor="#FF666666"
                android:textColor="#FF666666"/>

        </RelativeLayout>
    </LinearLayout>

</layout>