<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.flyco.roundview.RoundLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:rv_cornerRadius="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:rv_backgroundColor="@color/white">

        <RelativeLayout
            android:id="@+id/rl_title"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="44dp">

            <TextView
                android:id="@+id/tv_order_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                tools:text="订单号：45454454545"
                android:textSize="@dimen/text_14sp"
                android:textColor="#FF333333"
                android:layout_marginLeft="10dp"/>
            <!--<TextView-->
            <!--android:id="@+id/tv_status"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--tools:text="待发货"-->
            <!--android:textColor="#FFFF9800"-->
            <!--android:textSize="12sp"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:layout_marginRight="10dp"/>-->
            <!--<TextView-->
            <!--android:id="@+id/tv_time"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--tools:text="2019-10-10  12：20"-->
            <!--android:textSize="@dimen/text_12sp"-->
            <!--android:textColor="#FF999999"-->
            <!--android:layout_marginTop="10dp"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_marginRight="10dp"/>-->

            <View
                style="@style/default_under_line"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <ImageView
                android:id="@+id/iv"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img_load_error_0"/>
            <TextView
                android:layout_toRightOf="@+id/iv"
                android:layout_marginLeft="8dp"
                android:id="@+id/tv_name"
                android:textColor="#FF333333"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginTop="8dp"
                tools:text="智慧车(ZHC)OBD车载智能精品小冰箱cx-144型号···"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="数量1"
                android:textSize="@dimen/text_12sp"
                android:textColor="#FF999999"
                android:layout_below="@+id/tv_name"
                android:layout_alignLeft="@+id/tv_name"
                android:layout_marginTop="6dp"/>

            <!--<TextView-->
            <!--android:id="@+id/tv_number"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--tools:text="x2"-->
            <!--android:textColor="#FF999999"-->
            <!--android:textSize="14sp"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_alignBottom="@+id/tv1"-->
            <!--android:layout_marginRight="10dp"/>-->
            <LinearLayout
                android:layout_below="@+id/tv1"
                android:layout_alignLeft="@+id/tv_name"
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥"
                    android:textSize="@dimen/text_14sp"
                    android:textColor="#FFFF3B30"/>
                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="356.00"
                    android:layout_marginLeft="2dp"
                    android:textSize="@dimen/text_15sp"
                    android:textColor="#FFFF3B30"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="8dp"
                tools:src="@drawable/default_header"/>
        </RelativeLayout>

        <View
            android:id="@+id/view1"
            style="@style/default_under_line"/>

        <com.flyco.roundview.RoundTextView
            android:id="@+id/tv_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:rv_cornerRadius="2dp"
            app:rv_backgroundColor="#F6F6F6"
            android:textColor="#333333"
            android:padding="6dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="8dp"
            tools:text="申诉内容:对方一直不确认信息，帮忙处理一下对方一直不确认信息，帮忙处理一下对方一直不确认信息，帮忙处理一下对方一直不确认信息，帮忙处理一下"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp">
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="申诉时间：2019-12-12  12:12:12"
                android:textColor="#FF999999"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:textSize="12sp"/>
            <com.flyco.roundview.RoundTextView
                android:visibility="visible"
                android:id="@+id/btn_right"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="已解决"
                app:rv_cornerRadius="20dp"
                android:minWidth="80dp"
                android:paddingLeft="13dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:paddingRight="13dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textSize="@dimen/text_13sp"
                app:rv_strokeWidth="0.8dp"
                android:layout_marginRight="10dp"
                app:rv_strokeColor="#FF9800"
                android:textColor="#FF9800"
                android:layout_marginEnd="10dp" />
        </RelativeLayout>



    </com.flyco.roundview.RoundLinearLayout>

</layout>