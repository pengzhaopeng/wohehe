<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <com.flyco.roundview.RoundLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:rv_cornerRadius="@dimen/common_radius"
        app:rv_backgroundColor="@color/white"
        android:layout_marginTop="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="抢购时间"
                android:textColor="#FF777777"
                android:textSize="14sp"
                android:layout_marginLeft="8dp"/>
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="15:00 - 16:00"
                android:textColor="#FF333333"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
        <View
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            style="@style/default_under_line"/>
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2">
                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/iv"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    app:riv_corner_radius="4dp"
                    android:layout_centerInParent="true"
                    android:scaleType="centerCrop"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="10dp"
                    tools:src="@drawable/img_load_error_0"/>
            </RelativeLayout>

            <RelativeLayout
                android:paddingRight="10dp"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_height="wrap_content"
                    tools:text="欧舒丹甜蜜樱花沐浴啫喱…"
                    android:textColor="#FF333333"
                    android:textSize="14sp"
                    android:maxLines="1"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/iv"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/tv_stf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="预约扣取生态分：15"
                    android:textColor="#FF777777"
                    android:textSize="12sp"
                    android:layout_below="@+id/tv_title"
                    android:layout_marginTop="4dp"
                    android:layout_alignLeft="@+id/tv_title"/>

                <LinearLayout
                    android:id="@+id/ll_money"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="6dp"
                    android:layout_alignLeft="@+id/tv_title"
                    android:layout_below="@+id/tv_stf"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="价值："
                        android:textColor="#FF333333"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/tv_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(1000 - 2566）"
                        android:textColor="@color/red"
                        android:textSize="16sp"/>
                </LinearLayout>

                <com.flyco.roundview.RoundTextView
                    android:id="@+id/btn"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    app:rv_backgroundColor="@color/red"
                    app:rv_cornerRadius="20dp"
                    tools:text="立即抢购"
                    android:gravity="center"
                    android:textSize="13sp"
                    android:layout_marginTop="6dp"
                    android:layout_alignLeft="@+id/ll_money"
                    android:layout_below="@+id/ll_money"
                    android:textColor="@color/white"/>
            </RelativeLayout>

        </LinearLayout>

    </com.flyco.roundview.RoundLinearLayout>
</layout>